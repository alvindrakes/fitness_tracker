<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvindrakes.my_fitness_tracker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".ContentProvider.MyContentProvider"
            android:authorities="com.example.alvindrakes.trackerprovider">
        </provider>

        <receiver android:name=".TrackerReceiver">
            <intent-filter>
                <action android:name="com.example.alvindrakes.fitnesstracker.MY_LOCATION_RECEIVER"></action>
                <action android:name="com.example.alvindrakes.fitnesstracker.MY_MAP_RECEIVER"></action>
            </intent-filter>
        </receiver>

        <service
            android:name=".TrackerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".DetailsPage"></activity>
    </application>

</manifest>